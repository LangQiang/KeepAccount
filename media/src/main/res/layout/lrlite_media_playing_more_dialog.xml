<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:textStyle="bold"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:text="更多操作"
        android:textColor="@color/white80"
        android:textSize="17sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="25dp">
        
        <LinearLayout
            android:id="@+id/playing_download_container"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content">
            <com.lazylite.mod.widget.textview.IconView
                android:id="@+id/playing_download_icon_font"
                android:text="@string/now_play_page_dialog_down_icon"
                android:background="@drawable/lrlite_media_white_cicle"
                android:textColor="@color/white80"
                android:gravity="center"
                android:textSize="27dp"
                android:layout_width="46dp"
                android:layout_height="46dp" />
            <TextView
                android:id="@+id/playing_download_btn"
                android:text="下载"
                android:layout_marginTop="12dp"
                android:textSize="12sp"
                android:textColor="@color/white80"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/playing_skip_btn_container"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content">
            <com.lazylite.mod.widget.textview.IconView
                android:id="@+id/playing_skip_btn_icon_font"
                android:text="@string/now_play_page_skip_start"
                android:background="@drawable/lrlite_media_white_cicle"
                android:textColor="@color/white80"
                android:gravity="center"
                android:textSize="27dp"
                android:layout_width="46dp"
                android:layout_height="46dp" />
            <TextView
                android:id="@+id/playing_skip_btn"
                android:text="跳过片头"
                android:layout_marginTop="12dp"
                android:textSize="12sp"
                android:textColor="@color/white80"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/playing_multiple_btn_container"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content">
            <com.lazylite.mod.widget.textview.IconView
                android:id="@+id/playing_multiple_icon_view"
                android:textSize="27dp"
                android:background="@drawable/lrlite_media_white_cicle"
                android:textColor="@color/white80"
                android:gravity="center"
                android:text="@string/now_play_page_times_1_0"
                android:layout_width="46dp"
                android:layout_height="46dp" />
            <TextView
                android:id="@+id/playing_multiple_btn"
                android:text="倍速播放"
                android:layout_marginTop="12dp"
                android:textSize="12sp"
                android:textColor="@color/white80"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/playing_time_btn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content">
            <com.lazylite.mod.widget.textview.IconView
                android:id="@+id/playing_timing_icon"
                android:textSize="27dp"
                android:background="@drawable/lrlite_media_white_cicle"
                android:textColor="@color/white80"
                android:gravity="center"
                android:text="@string/now_play_page_timing"
                android:layout_width="46dp"
                android:layout_height="46dp" />
            <TextView
                android:id="@+id/playing_timing_tv"
                android:text="定时关闭"
                android:layout_marginTop="12dp"
                android:textSize="12sp"
                android:textColor="@color/white80"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/LRLiteBase_cl_white_alpha_6" />

    <TextView
        android:id="@+id/dialog_close"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center"
        android:text="关闭"
        android:textColor="@color/white80"
        android:textSize="16sp" />

</LinearLayout>