<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/title"
        android:text="5fenzhong"
        android:textSize="12sp"
        android:textColor="@color/black80"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <FrameLayout
        android:layout_marginBottom="15dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/receive"
            android:background="@drawable/lrlite_common_rounded_rectangle_ff5400"
            android:textSize="12sp"
            android:gravity="center"
            android:text="领取奖励"
            android:textColor="#ffffffff"
            android:layout_width="57dp"
            android:layout_height="20dp" />
        <LinearLayout
            android:id="@+id/reward_container"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:gravity="center_vertical"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/reward_icon"
                android:background="@drawable/lrlite_media_task_reward_icon_coin"
                android:layout_width="20dp"
                android:layout_gravity="center_vertical"
                android:layout_height="20dp" />
            <com.lazylite.mod.widget.textview.DinBoldTextView
                android:id="@+id/reward"
                android:text="+350"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="2.5dp"
                android:paddingTop="2dp"
                android:textColor="#ffab00"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        
    </FrameLayout>
    
</RelativeLayout>