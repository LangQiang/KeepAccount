<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="com.godq.keepaccounts.utils.GlobalConstantRes"/>
        <import type="com.godq.keepaccounts.billdetail.BillEntity"/>
        <variable
            name="itemData"
            type="BillEntity" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@{itemData.expand?@drawable/ka_bill_item_bg2:@drawable/ka_bill_item_bg1}"
        android:layout_width="match_parent"
        android:layout_height="80dp">

        <TextView
            android:id="@+id/date_tv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="15dp"
            android:textStyle="bold"
            android:textSize="18dp"
            android:textColor="@color/black80"
            android:text="@{itemData.date}"
            tools:text="2022-09-17"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            app:layout_constraintStart_toEndOf="@+id/date_tv"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="5dp"
            android:textSize="12dp"
            android:textColor="@color/black60"
            android:text='@{"(" + String.valueOf(itemData.tableTimes) + ")桌"}'
            tools:text="(16)桌"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="60dp"
            android:textStyle="bold"
            tools:text="2333"
            android:textSize="24dp"
            android:textColor="#ff5400"
            android:text='@{"¥" + String.valueOf(itemData.total)}'
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="15dp"
            android:src="@{itemData.expand ? @drawable/to_collapse_arrow:@drawable/to_expand_arrow}"
            android:layout_width="20dp"
            android:layout_height="20dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>