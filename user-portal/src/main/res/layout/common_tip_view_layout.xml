<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/tip_root_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:visibility="gone"
            tools:src="@drawable/base_list_empty"
            tools:visibility="visible"/>

        <TextView
            android:id="@+id/top_text_tip"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:textColor="@color/black40"
            android:textSize="14dp"
            android:visibility="gone"
            tools:text="网络请求失败，请检查您的网络设置"
            tools:visibility="visible"/>

        <TextView
            android:id="@+id/jump_button"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:minWidth="150dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="11dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:background="@drawable/btn_tip_view_jump_selector"
            android:gravity="center"
            android:text=""
            android:textColor="@color/white"
            android:textSize="14dp"
            android:visibility="gone"
            tools:visibility="visible"/>
    </LinearLayout>
    <com.lazylite.mod.widget.loading.CommonLoadingView
        android:id="@+id/loading_view"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>